@model IEnumerable<OnlineWebApp.Models.Categories>

<div class="filter-widget">
    <h4 class="fw-title">Categories</h4>
    <ul class="filter-catagories">
        @foreach (var Category in Model)
        {
            <li>
                @Html.ActionLink(Category.Category_Type, "Browse", "OnlineStores", new { Category = Category.Category_Type }, null)
            </li>

        }
    </ul>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}