@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <div class="nav-item">
            <div class="container">
                @{Html.RenderAction("AllDepartments", "OnlineStores");}
                <nav class="nav-menu mobile-menu">
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="@Url.Action("Shop", "OnlineStores")">Shop</a></li>
                        <li><a href="@Url.Action("Sale", "OnlineStores")">Sales</a></li>

                        <li>
                            <a href="#">Pages</a>
                            <ul class="dropdown">

                                <li><a href="@Url.Action("Index", "ShoppingCart")">Shopping Cart</a></li>
                                <li><a href="@Url.Action("AddressAndPayment", "Checkout")">Checkout</a></li>
                                <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                                <li><a href="./faq.html">Faq</a></li>
                                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                            </ul>
                        </li>
                        <li>
                            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>
                    </ul>
                </nav>
                <div id="mobile-menu-wrap"></div>
            </div>
        </div>
    }
}
else
{
    <div class="nav-item">
        <div class="container">
            @{Html.RenderAction("AllDepartments", "OnlineStores");}
            <nav class="nav-menu mobile-menu">
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Shop", "OnlineStores")">Shop</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                    <li>
                        <a href="#">Pages</a>
                        <ul class="dropdown">

                            <li><a href="@Url.Action("Index", "ShoppingCart")">Shopping Cart</a></li>
                            <li><a href="@Url.Action("AddressAndPayment", "Checkout")">Checkout</a></li>
                            <li><a href="@Url.Action("Sale", "OnlineStores")">Sales</a></li>
                            <li><a href="./faq.html">Faq</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                </ul>

            </nav>
            <div id="mobile-menu-wrap"></div>
        </div>
    </div>
}
