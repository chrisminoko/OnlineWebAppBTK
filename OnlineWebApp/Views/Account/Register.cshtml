@model OnlineWebApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a>
                    <span>Register</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="register-form">
                    <h2>Register</h2>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="group-input">
                            <label for="username">Email address *</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        <div class="group-input">
                            <label for="username">Username*</label>
                            @Html.TextBoxFor(m => m.Display_Name, new { @class = "form-control" })
                        </div>
                        <div class="group-input">
                            <label for="pass">Password *</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <div class="group-input">
                            <label for="con-pass">Confirm Password *</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                        <input type="submit" class="site-btn register-btn" value="REGISTER" />
                        <div class="switch-login">
                            <a href="@Url.Action("Login")" class="or-login">Or Login</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
